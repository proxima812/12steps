---
import Aside from "@/components/Aside.astro";
import Blur from "@/components/Blur.astro";
import PostCard from "@/components/PostCard.astro";
import { DEFAULT_TITLE } from "@/config/settings";
import theme from "@/data/theme";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getTaxonomy } from "@/utils/getTaxonomy";
import { customSlugify } from "@/utils/libs/customSlugify";
import { getSinglePage } from "@/utils/libs/getSinglePage";
import { getCollection } from "astro:content";

const posts = await getSinglePage("posts");
const postsLength = (await getCollection("posts")).length;
const tags = await getTaxonomy("posts", "tags");
const tagCounts = {};
posts.forEach((post) => {
  // @ts-ignore
  post.data.tags.forEach((tag) => {
    if (!tagCounts[tag]) {
      tagCounts[tag] = 0;
    }
    tagCounts[tag]++;
  });
});
---

<BaseLayout
  title="–ü–æ—Å—Ç—ã –Ω–∞ —Ç–µ–º—É 12 —à–∞–≥–æ–≤"
  description={`${DEFAULT_TITLE}. –ë–æ–ª–µ–µ (${posts.length}) –ø–æ—Å—Ç–æ–≤: 12 —à–∞–≥–æ–≤, –º–∞—Ç–µ—Ä–∏–∞–ª—ã, –æ–ø—ã—Ç, —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∞ –∏ –¥—Ä—É–≥–æ–µ.`}
  container_max_w="max-w-6xl"
>
  <main class="flex flex-col gap-12" aria-label="–ë–ª–æ–≥ –∫–æ–Ω—Ç–µ–Ω—Ç —Å–µ–∫—Ü–∏—è">
    <Aside />
    <div class="flex flex-wrap items-center justify-between gap-4">
      <a href="/" class="rounded-full bg-white px-3 py-1 text-black"
        >üè† –ì–ª–∞–≤–Ω–∞—è</a
      >
      <h4 class="text-3xl font-bold">–í—Å–µ –ø–æ—Å—Ç—ã ({postsLength})</h4>
    </div>
    <div class="flex flex-wrap gap-3">
      {
        tags &&
          tags.map((tag) => (
            <span
              class={`pill-${customSlugify(
                tag,
              )} relative rounded-full px-3 py-1 text-xs leading-tight text-white`}
            >
              {tag} ({tagCounts[tag] || 0})
            </span>
          ))
      }
    </div>
    <div class="columns-1 gap-6 md:columns-2 lg:columns-3">
      {posts.map((item: any) => <PostCard slug={item.slug} data={item.data} />)}
    </div>
  </main>
