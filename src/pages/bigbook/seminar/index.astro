---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";

const links = [
  { name: "Предисловие", href: "/bigbook/seminar/preface" },
  { name: "Мнение доктора", href: "/bigbook/seminar/doctors-opinion" },
  { name: "Рассказ Билла", href: "/bigbook/seminar/bills-story" },
  { name: "Выход есть", href: "/bigbook/seminar/there-is-a-solution" },
  {
    name: "Ещё об алкоголизме",
    href: "/bigbook/seminar/more-about-alcoholism",
  },
  {
    name: "Обращение к агностикам",
    href: "/bigbook/seminar/addressing-agnostics",
  },
  { name: "Как это работает?", href: "/bigbook/seminar/how-does-it-work" },
  { name: "В действии!", href: "/bigbook/seminar/in-action" },
  { name: "Работая с другими", href: "/bigbook/seminar/working-with-others" },
];

import bigboookImg from "@/assets/bigbook.png";
import ButtonLink from "@/components/Customs/ButtonLink.astro";
---

<BaseLayout
  container_max_w="max-w-6xl"
  title="Джо и Чарли: изучение БКАА"
  description="На сегодняшний день, материалы Джо и Чарли являются самыми известными и используемыми в мире материалами по Большой книге. Эти два алкоголика объездили со своими занятиями по изучению Большой книги все 50 штатов США и многие страны мира, где есть АА."
  blurClass={{
    topLeft: "bg-blue-300",
    topRight: "bg-sky-300",
    bottomRight: "bg-gray-500",
    bottomLeft: "bg-slate-500",
  }}
>
  <main class="flex flex-col gap-12 lg:flex-row">
    <Image
      src={bigboookImg}
      class="overflow-hidden rounded-2xl"
      alt="Джо и Чарли: изучение БКАА"
      format="avif"
      quality={"mid"}
    />
    <div class="flex shrink-0 flex-wrap gap-3 lg:flex-col">
      {
        links.map((item) => (
          <ButtonLink
            link={item.href}
            class=" self-start ring-1 ring-inset ring-white/20 transition-colors duration-75 ease-linear hover:bg-white/20"
          >
            {item.name}
          </ButtonLink>
        ))
      }
    </div>
  </main>
</BaseLayout>
