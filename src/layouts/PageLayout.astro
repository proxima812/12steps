---
import BaseLayout from "./BaseLayout.astro";

const { title, description, heroImage, index, blurClass } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  index={index}
  heroImage={heroImage}
  blurClass={blurClass}
>
  <main class="prose prose-lg prose-invert prose-white max-w-none xl:prose-xl">
    <h1>{title}</h1>
    <slot />
  </main>
</BaseLayout>
