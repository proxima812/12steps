---
import Footer from "@/components/partials/Footer.astro";
import Header from "@/components/partials/Header.astro";
import SEOTags from "@/components/seo/SEOTags.astro";
import "@/styles/global.css";

interface Props {
  name?: string;
  title: string;
  type?: any;
  description: string;
  heroImage?: string;
  locale?: string;
  tags?: any;
  canonicalURL?: any;
  author?: string;
  container_max_w?: string;
}

const {
  name,
  author,
  title,
  type,
  description,
  heroImage,
  locale = "ru",
  tags,
  container_max_w,
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
} = Astro.props;
---

<!doctype html>
<html lang="ru" class="scroll-smooth">
  <SEOTags
    author={author}
    title={title}
    description={description}
    name={name}
    type={type}
    heroImage={heroImage}
    locale={locale}
    tags={tags}
    canonicalURL={canonicalURL}
  />
  <!-- <ViewTransitions fallback='swap'/> -->
  <body class="bg-black text-white">
    <Header />
    <div
      class:list={`${container_max_w ?? "max-w-5xl"} container mx-auto px-5`}
    >
      <div class="relative flex flex-col gap-6 py-6">
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
