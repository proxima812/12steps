---
import Logo from "@/components/Logo.astro";
import { DEFAULT_TITLE } from "@/config/settings";
import { version } from "../../../version.json";

const versionSet = version;
---

<header class="relative z-10 bg-white py-12 md:py-24">
  <div
    class="container mx-auto flex max-w-5xl flex-wrap items-center gap-6 px-5"
  >
    <div class="mx-auto flex flex-col items-center justify-center gap-2">
      <h1
        class="mb-2 flex flex-wrap items-center justify-center gap-2 text-center text-3xl font-bold sm:text-4xl md:text-5xl"
      >
        <Logo />
        {DEFAULT_TITLE}
      </h1>
      <p
        class="max-w-[420px] text-center text-lg leading-relaxed text-gray-600"
      >
        <b>12 шагов:</b> материалы, статьи, публикации, опыт и многое другое.
      </p>
      <p
        class="rounded-full bg-purple-50 px-4 py-1 text-purple-600 ring-1 ring-purple-400"
      >
        {versionSet}
      </p>
    </div>
