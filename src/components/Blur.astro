---
import { MAP_COLOR_VARIANT_TO_BG } from "@/utils/mapVariants";
import type { TailwindColor } from "@/utils/types/tailwind";

type Props = {
  position: "bottom" | "top";
  color: TailwindColor;
};

const { position, color } = Astro.props;
---

<div
  class:list={{
    [`fixed z-0 h-[134px] w-[134px] rounded-full lg:h-[300px] lg:w-[300px] ${MAP_COLOR_VARIANT_TO_BG[color]} opacity-50 blur-[150px] md:blur-[300px]`]: true,
    ["left-0 top-0"]: position === "top",
    ["bottom-0 right-0"]: position === "bottom",
  }}
>
</div>
