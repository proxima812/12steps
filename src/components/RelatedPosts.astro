---
import PostCard from "./PostCard.astro";
const { posts } = Astro.props;
---

<hr />
<h4 class="text-xl font-bold">Похожие материалы</h4>
<div class="grid items-start gap-6 md:grid-cols-2">
  {
    posts
      .slice(0, 4)
      .map((post) => <PostCard data={post.data} slug={post.slug} />)
  }
</div>
